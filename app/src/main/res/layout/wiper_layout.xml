<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wiperToggleButton"
        android:layout_weight="0.40"
        android:textOff="@string/wiperOff"
        android:textOn="@string/wiperOn"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="220dp"
        android:height="100dp"
        android:layout_marginTop="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wiperText"
        android:text="@string/wiperOptions"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="-160dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wiperButton"
        android:text="@string/wiperText"
        android:height="100dp"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp" />

</LinearLayout>
