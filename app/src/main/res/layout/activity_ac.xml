<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Air Control"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AC Type"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageButton"
        android:background="@drawable/ac1"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <ImageButton
        android:layout_width="240px"
        android:layout_height="240px"
        android:id="@+id/imageButton2"
        android:background="@drawable/ac2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageButton3"
        android:background="@drawable/ac3"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageButton4"
        android:background="@drawable/ac4"
        android:layout_below="@+id/imageButton"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageButton5"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/ac5" />

    <ImageButton
        android:layout_width="240px"
        android:layout_height="240px"
        android:id="@+id/imageButton6"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3"
        android:background="@drawable/ac6" />

</RelativeLayout>
